gdtr: 
.word 0 # For limit storage
.long 0 # For base storage

movw  $gdtr, %ax
movw  %ax,(%ebx)
movl  8(%esp),%eax
movl  %eax,2(%ebx)
ret

reloadSegments: 
jMP   0x08:.reload_CS # 0x08 is a stand-in for your code segment
reloadSegments.reload_CS: 
movw  $0x10,%ax # 0x10 is a stand-in for your data segment
movw  %ax,%ds
movw  %ax,%es
movw  %ax,%fs
movw  %ax,%gs
movw  %ax,%ss
ret


